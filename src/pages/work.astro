---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Work | The Code Sorcerer">
  <!-- Cursor Glow Effect -->
  <div class="cursor-glow"></div>

  <main class="bg-background-light dark:bg-background-dark py-24">
    <div class="max-w-7xl mx-auto px-6">
      <div class="text-center mb-16 scroll-reveal">
        <p class="uppercase text-sm tracking-[0.3em] text-primary-light dark:text-primary font-semibold">Work</p>
        <h1 class="font-display text-display-md md:text-display-lg font-bold text-gray-900 dark:text-text-dark-primary mt-4">Enchantments In The Wild</h1>
        <p class="mt-6 text-body-lg text-gray-700 dark:text-text-dark-secondary max-w-3xl mx-auto leading-relaxed">
          A few glimpses of how weâ€™ve woven engineering, AI, and design together to help ambitious teams scale faster.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-10 scroll-reveal">
        {[
          {
            title: 'Project Alchemy',
            body: 'Migrated a monolithic commerce platform to a modular micro-frontend architecture that cut deployment time from weeks to hours.',
            tags: ['React', 'Node', 'Kubernetes'],
            img: '/project-alchemy.svg',
          },
          {
            title: 'Nova Portal',
            body: 'Built an AI-powered support portal that routes tickets automatically and gives agents magical productivity boosts.',
            tags: ['Next.js', 'LangChain', 'OpenAI'],
            img: '/project-nova.svg',
          },
          {
            title: 'CharmGuard',
            body: 'End-to-end security modernization, adding SOC2-ready tooling, secrets automation, and real-time monitoring.',
            tags: ['Golang', 'Terraform', 'Datadog'],
            img: '/project-quantum.svg',
          },
          {
            title: 'Summoner MVP',
            body: 'Rapidly shipped a cross-platform MVP in eight weeks, enabling our client to raise a seed round with confidence.',
            tags: ['Flutter', 'Firebase', 'Figma'],
            img: '/project-alchemy.svg',
          },
        ].map((project) => (
          <article class="bg-white dark:bg-surface-dark rounded-2xl overflow-hidden shadow-card border border-gray-100 dark:border-border-dark card-hover group">
            <img class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-105" src={project.img} alt={project.title} loading="lazy"/>
            <div class="p-8">
              <h3 class="font-display text-heading-2 font-semibold text-gray-900 dark:text-text-dark-primary group-hover:text-primary transition-colors duration-300">{project.title}</h3>
              <p class="mt-4 text-body-md text-gray-600 dark:text-text-dark-secondary leading-relaxed">{project.body}</p>
              <div class="mt-6 flex flex-wrap gap-3">
                {project.tags.map((tag) => (
                  <span class="px-3 py-1 text-sm rounded-full bg-neutral-silver dark:bg-gray-800 text-gray-700 dark:text-gray-200">{tag}</span>
                ))}
              </div>
            </div>
          </article>
        ))}
      </div>

      <div class="mt-16 text-center scroll-reveal">
        <a class="btn-primary inline-flex items-center gap-2" href="/contact">
          Start Your Next Build
          <span class="material-symbols-outlined text-lg">arrow_forward</span>
        </a>
      </div>
    </div>
  </main>

  <script>
    import { initAnimations } from '../scripts/animations';
    
    document.addEventListener('DOMContentLoaded', () => {
      initAnimations();
    });
  </script>
</Layout>
