---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Work & Case Studies | The Code Sorcerer - Senior Software Agency"
  description="See our portfolio of AI, app development, and digital product case studies. The Code Sorcerer delivers senior-level engineering and magical results for clients."
  keywords="work, case studies, portfolio, software agency, AI, app development, The Code Sorcerer, engineering"
  canonical="https://thecodesorcerer.com/work"
>
  <!-- Cursor Glow Effect -->
  <div class="cursor-glow"></div>

  <main class="bg-background-light dark:bg-background-dark">
    <!-- Hero Section -->
    <section class="py-24 md:py-32 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-transparent to-accent/5 dark:from-primary/10 dark:via-transparent dark:to-accent/10 pointer-events-none"></div>
      
      <!-- Floating sparkles -->
      <div class="absolute top-20 left-10 w-2 h-2 bg-primary rounded-full animate-pulse"></div>
      <div class="absolute top-40 right-20 w-3 h-3 bg-accent rounded-full animate-pulse" style="animation-delay: 0.5s;"></div>
      <div class="absolute bottom-32 left-1/4 w-2 h-2 bg-primary rounded-full animate-pulse" style="animation-delay: 1s;"></div>
      
      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16 scroll-reveal">
          <div class="inline-flex items-center gap-2 mb-4">
            <span class="material-symbols-outlined text-primary text-2xl">auto_awesome</span>
            <p class="uppercase text-sm tracking-[0.3em] text-primary-light dark:text-primary font-semibold">Our Magical Work</p>
            <span class="material-symbols-outlined text-accent text-2xl">auto_awesome</span>
          </div>
          <h1 class="font-display text-display-md md:text-display-lg font-bold text-gray-900 dark:text-text-dark-primary mt-4">
            <span class="gradient-text-animated">AI, App Development & Digital Product Portfolio</span>
          </h1>
          <p class="mt-6 text-body-lg text-gray-700 dark:text-text-dark-secondary max-w-3xl mx-auto leading-relaxed">
            A few glimpses of how we've woven <span class="text-primary dark:text-accent font-semibold">engineering, AI, and design</span> together to help ambitious teams scale faster.
          </p>
        </div>

        <!-- Stats Section -->
        <div class="grid md:grid-cols-4 gap-8 scroll-reveal-stagger mb-16">
          {[
            { number: '50+', value: 50, suffix: '+', label: 'Projects Delivered', icon: 'rocket_launch' },
            { number: '98%', value: 98, suffix: '%', label: 'Client Satisfaction', icon: 'sentiment_satisfied' },
            { number: '2M+', value: 2, suffix: 'M+', label: 'Users Impacted', icon: 'groups' },
            { number: '24/7', value: 0, suffix: '24/7', label: 'Support Available', icon: 'support_agent' }
          ].map((stat) => (
            <div class="scroll-reveal bg-surface-light dark:bg-surface-dark p-6 rounded-xl border border-border-light dark:border-border-dark text-center group hover:scale-105 transition-transform duration-300">
              <span class="material-symbols-outlined text-primary dark:text-accent text-4xl mb-3 block group-hover:scale-110 transition-transform duration-300">{stat.icon}</span>
              <p class="font-display text-4xl font-bold text-text-light-primary dark:text-text-dark-primary mb-2">
                <span class="count-up" data-target={stat.value} data-suffix={stat.suffix}>0</span>
              </p>
              <p class="text-sm text-text-light-secondary dark:text-text-dark-tertiary">{stat.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Case Study -->
    <section class="py-24 bg-surface-light dark:bg-surface-dark">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16 scroll-reveal">
          <span class="material-symbols-outlined text-primary text-6xl mb-4 inline-block">auto_awesome</span>
          <h2 class="font-display text-heading-1 font-bold text-text-light-primary dark:text-text-dark-primary">
            Featured <span class="gradient-text-animated">Case Study</span>
          </h2>
          <p class="mt-4 text-body-lg text-text-light-secondary dark:text-text-dark-secondary max-w-2xl mx-auto">
            Deep dive into how we transformed a legacy system into a modern powerhouse.
          </p>
        </div>

        <div class="grid md:grid-cols-2 gap-16 items-center scroll-reveal">
          <div class="relative scroll-reveal-left">
            <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-accent/20 blur-3xl rounded-full"></div>
            <img 
              class="relative w-full rounded-2xl shadow-glow border border-border-light dark:border-border-dark hover:scale-105 transition-transform duration-500" 
              src="/project-alchemy.svg" 
              alt="Project Alchemy Case Study"
              loading="lazy"
            />
          </div>
          <div class="scroll-reveal-right">
            <span class="inline-block px-4 py-2 bg-primary/10 dark:bg-primary/20 text-primary dark:text-accent text-sm font-semibold rounded-full mb-6">
              Featured Project
            </span>
            <h3 class="font-display text-heading-1 font-bold text-text-light-primary dark:text-text-dark-primary">
              Project Alchemy
            </h3>
            <p class="mt-4 text-body-lg text-text-light-secondary dark:text-text-dark-secondary leading-relaxed">
              Migrated a monolithic commerce platform serving <span class="text-primary dark:text-accent font-semibold">500K+ daily users</span> to a modular micro-frontend architecture.
            </p>
            
            <div class="mt-8 space-y-4">
              <div class="flex items-start gap-4 group">
                <span class="material-symbols-outlined text-primary text-2xl mt-1 group-hover:scale-125 transition-transform duration-300">check_circle</span>
                <div>
                  <h4 class="font-semibold text-text-light-primary dark:text-text-dark-primary">95% Faster Deployments</h4>
                  <p class="text-sm text-text-light-secondary dark:text-text-dark-tertiary mt-1">Cut deployment time from weeks to hours</p>
                </div>
              </div>
              <div class="flex items-start gap-4 group">
                <span class="material-symbols-outlined text-primary text-2xl mt-1 group-hover:scale-125 transition-transform duration-300">check_circle</span>
                <div>
                  <h4 class="font-semibold text-text-light-primary dark:text-text-dark-primary">Zero Downtime Migration</h4>
                  <p class="text-sm text-text-light-secondary dark:text-text-dark-tertiary mt-1">Seamless transition with progressive rollout</p>
                </div>
              </div>
              <div class="flex items-start gap-4 group">
                <span class="material-symbols-outlined text-primary text-2xl mt-1 group-hover:scale-125 transition-transform duration-300">check_circle</span>
                <div>
                  <h4 class="font-semibold text-text-light-primary dark:text-text-dark-primary">40% Performance Boost</h4>
                  <p class="text-sm text-text-light-secondary dark:text-text-dark-tertiary mt-1">Improved load times and user experience</p>
                </div>
              </div>
            </div>

            <div class="mt-8 flex flex-wrap gap-3">
              {['React', 'Node.js', 'Kubernetes', 'PostgreSQL', 'Redis', 'AWS'].map((tech) => (
                <span class="px-4 py-2 text-sm font-medium rounded-lg bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/20 dark:to-accent/20 text-text-light-primary dark:text-text-dark-primary border border-border-light dark:border-border-dark">
                  {tech}
                </span>
              ))}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- All Projects Grid -->
    <section class="py-24 bg-background-light dark:bg-background-dark">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16 scroll-reveal">
          <h2 class="font-display text-heading-1 font-bold text-text-light-primary dark:text-text-dark-primary">
            More <span class="gradient-text-animated">Magical Projects</span>
          </h2>
          <p class="mt-4 text-body-lg text-text-light-secondary dark:text-text-dark-secondary max-w-2xl mx-auto">
            Each project is a testament to our commitment to excellence and innovation.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 scroll-reveal-stagger">
          {[
            {
              title: 'Nova Portal',
              subtitle: 'AI-Powered Support System',
              body: 'Built an intelligent support portal that routes tickets automatically and gives agents magical productivity boosts.',
              impact: '60% reduction in support tickets',
              tags: ['Next.js', 'LangChain', 'OpenAI', 'PostgreSQL'],
              img: '/project-nova.svg',
              color: 'accent'
            },
            {
              title: 'CharmGuard',
              subtitle: 'Enterprise Security Suite',
              body: 'End-to-end security modernization, adding SOC2-ready tooling, secrets automation, and real-time monitoring.',
              impact: 'SOC2 compliance achieved',
              tags: ['Golang', 'Terraform', 'Datadog', 'Vault'],
              img: '/project-quantum.svg',
              color: 'primary'
            },
            {
              title: 'Summoner MVP',
              subtitle: 'Cross-Platform Mobile App',
              body: 'Rapidly shipped a cross-platform MVP in eight weeks, enabling our client to raise a seed round with confidence.',
              impact: '$2M seed round raised',
              tags: ['Flutter', 'Firebase', 'Figma', 'Stripe'],
              img: '/project-alchemy.svg',
              color: 'accent'
            },
            {
              title: 'Quantum Analytics',
              subtitle: 'Real-time Data Platform',
              body: 'Built a scalable analytics platform processing millions of events per day with sub-second query performance.',
              impact: '10M+ events/day processed',
              tags: ['Python', 'Apache Kafka', 'ClickHouse', 'Grafana'],
              img: '/project-quantum.svg',
              color: 'primary'
            },
            {
              title: 'Enchant Commerce',
              subtitle: 'Headless E-commerce Platform',
              body: 'Created a modern headless commerce solution with AI-powered recommendations and seamless checkout experience.',
              impact: '200% conversion rate increase',
              tags: ['Shopify', 'React', 'GraphQL', 'Stripe'],
              img: '/project-nova.svg',
              color: 'accent'
            },
            {
              title: 'Spellbook CMS',
              subtitle: 'Content Management System',
              body: 'Developed a flexible CMS with multi-language support, version control, and collaborative editing capabilities.',
              impact: '5x faster content publishing',
              tags: ['Next.js', 'Sanity', 'Vercel', 'TypeScript'],
              img: '/project-alchemy.svg',
              color: 'primary'
            },
          ].map((project) => (
            <article class="scroll-reveal bg-white dark:bg-surface-dark rounded-2xl overflow-hidden shadow-card border border-gray-100 dark:border-border-dark card-hover group">
              <div class="relative overflow-hidden">
                <img 
                  class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110" 
                  src={project.img} 
                  alt={project.title} 
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              </div>
              <div class="p-6">
                <span class={`inline-block px-3 py-1 text-xs font-semibold rounded-full mb-3 ${project.color === 'primary' ? 'bg-primary/10 text-primary' : 'bg-accent/10 text-accent'}`}>
                  {project.subtitle}
                </span>
                <h3 class="font-display text-heading-3 font-semibold text-gray-900 dark:text-text-dark-primary group-hover:text-primary dark:group-hover:text-accent transition-colors duration-300">
                  {project.title}
                </h3>
                <p class="mt-3 text-body-md text-gray-600 dark:text-text-dark-secondary leading-relaxed">
                  {project.body}
                </p>
                <div class={`mt-4 flex items-center gap-2 ${project.color === 'primary' ? 'text-primary' : 'text-accent'} font-semibold text-sm`}>
                  <span class="material-symbols-outlined text-lg">trending_up</span>
                  <span>{project.impact}</span>
                </div>
                <div class="mt-5 flex flex-wrap gap-2">
                  {project.tags.map((tag) => (
                    <span class="px-3 py-1 text-xs rounded-full bg-neutral-silver dark:bg-gray-800 text-gray-700 dark:text-gray-300">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>

    <!-- Capabilities Showcase -->
    <section class="py-24 bg-surface-light dark:bg-surface-dark">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-16 scroll-reveal">
          <h2 class="font-display text-heading-1 font-bold text-text-light-primary dark:text-text-dark-primary">
            Our <span class="gradient-text-animated">Expertise</span> In Action
          </h2>
          <p class="mt-4 text-body-lg text-text-light-secondary dark:text-text-dark-secondary max-w-2xl mx-auto">
            The technologies and methodologies we master to deliver exceptional results.
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8 scroll-reveal-stagger">
          {[
            {
              icon: 'code',
              title: 'Full-Stack Mastery',
              items: ['React & Next.js', 'Node.js & Python', 'GraphQL & REST APIs', 'PostgreSQL & MongoDB']
            },
            {
              icon: 'psychology',
              title: 'AI Integration',
              items: ['LLM Integration', 'Computer Vision', 'NLP Systems', 'ML Model Deployment']
            },
            {
              icon: 'cloud',
              title: 'Cloud & DevOps',
              items: ['AWS & GCP', 'Kubernetes', 'CI/CD Pipelines', 'Infrastructure as Code']
            }
          ].map((capability) => (
            <div class="scroll-reveal bg-background-light dark:bg-background-dark p-8 rounded-2xl border border-border-light dark:border-border-dark group hover:shadow-glow transition-all duration-300">
              <div class="w-14 h-14 rounded-xl bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/20 dark:to-accent/20 flex items-center justify-center mb-6 group-hover:scale-110 group-hover:rotate-6 transition-all duration-300">
                <span class="material-symbols-outlined text-primary dark:text-accent text-3xl">{capability.icon}</span>
              </div>
              <h3 class="font-display text-heading-3 font-semibold text-text-light-primary dark:text-text-dark-primary mb-4">
                {capability.title}
              </h3>
              <ul class="space-y-3">
                {capability.items.map((item) => (
                  <li class="flex items-center gap-3 text-text-light-secondary dark:text-text-dark-tertiary group/item">
                    <span class="material-symbols-outlined text-primary dark:text-accent text-sm group-hover/item:scale-125 transition-transform duration-300">auto_awesome</span>
                    <span class="group-hover/item:text-primary dark:group-hover/item:text-accent transition-colors duration-300">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-24 bg-background-light dark:bg-background-dark">
      <div class="max-w-7xl mx-auto px-6">
        <div class="bg-gradient-to-br from-primary-light to-accent dark:from-primary dark:to-accent text-white rounded-3xl p-12 md:p-16 text-center shadow-glow scroll-reveal relative overflow-hidden">
          <!-- Decorative elements -->
          <div class="absolute inset-0 opacity-10">
            <div class="absolute top-10 left-10 w-32 h-32 bg-white rounded-full blur-3xl"></div>
            <div class="absolute bottom-10 right-10 w-40 h-40 bg-white rounded-full blur-3xl"></div>
          </div>
          
          <div class="relative z-10">
            <span class="material-symbols-outlined text-white/30 text-7xl mb-6 inline-block">auto_awesome</span>
            <h2 class="font-display text-heading-1 font-bold">Ready to Create Your Success Story?</h2>
            <p class="mt-6 text-xl text-blue-50 max-w-2xl mx-auto leading-relaxed">
              Let's build something extraordinary together. From MVP to enterprise-scale, we've got you covered.
            </p>
            <div class="mt-10 flex flex-col sm:flex-row gap-4 justify-center">
              <a 
                class="inline-flex items-center justify-center bg-white text-primary font-bold px-8 py-4 rounded-xl hover:bg-blue-50 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1" 
                href="/contact"
              >
                <span>Start Your Project</span>
                <span class="material-symbols-outlined ml-2">arrow_forward</span>
              </a>
              <a 
                class="inline-flex items-center justify-center bg-transparent border-2 border-white text-white font-bold px-8 py-4 rounded-xl hover:bg-white hover:text-primary transition-all duration-300" 
                href="/services"
              >
                <span>Explore Services</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <script>
    import { initAnimations } from '../scripts/animations';
    
    // Count-up animation for stats
    function animateCountUp(element: HTMLElement) {
      const target = parseFloat(element.dataset.target || '0');
      const suffix = element.dataset.suffix || '';
      const duration = 2000; // 2 seconds
      const steps = 60; // 60 frames
      const increment = target / steps;
      const stepDuration = duration / steps;
      
      let current = 0;
      const timer = setInterval(() => {
        current += increment;
        if (current >= target) {
          current = target;
          clearInterval(timer);
        }
        
        // Format number based on value
        let displayValue: string;
        if (suffix === '24/7') {
          displayValue = '24/7';
        } else if (suffix === 'M+') {
          displayValue = current.toFixed(1);
        } else {
          displayValue = Math.floor(current).toString();
        }
        
        element.textContent = displayValue + (suffix !== '24/7' ? suffix : '');
      }, stepDuration);
    }

    // Observe stats for animation trigger
    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const countUpElement = entry.target.querySelector('.count-up');
          if (countUpElement && !countUpElement.classList.contains('animated')) {
            countUpElement.classList.add('animated');
            animateCountUp(countUpElement as HTMLElement);
          }
        }
      });
    }, { threshold: 0.5 });
    
    document.addEventListener('DOMContentLoaded', () => {
      initAnimations();
      
      // Observe all stat cards
      const statCards = document.querySelectorAll('.scroll-reveal');
      statCards.forEach(card => {
        if (card.querySelector('.count-up')) {
          statsObserver.observe(card);
        }
      });
    });
  </script>
</Layout>
