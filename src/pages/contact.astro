---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact | The Code Sorcerer - Senior Software Agency"
  description="Contact The Code Sorcerer for senior-level software engineering, AI, and app development. Book a discovery call or send us a message."
  keywords="contact, software agency, senior engineers, AI, app development, The Code Sorcerer, discovery call"
  canonical="https://thecodesorcerer.com/contact"
>
  <!-- Cursor Glow Effect -->
  <div class="cursor-glow"></div>

  <main class="bg-background-light dark:bg-background-dark py-24 overflow-hidden">
    <div class="max-w-7xl mx-auto px-6">
      <!-- Hero Section -->
      <div class="text-center mb-20 scroll-reveal relative">
        <!-- Floating Sparkles -->
        <div class="absolute inset-0 -z-10 overflow-hidden pointer-events-none">
          <div class="absolute top-10 left-1/4 w-2 h-2 bg-primary/30 dark:bg-accent/30 rounded-full animate-pulse"></div>
          <div class="absolute top-20 right-1/3 w-1.5 h-1.5 bg-accent/40 dark:bg-primary/40 rounded-full animate-pulse delay-100"></div>
          <div class="absolute bottom-10 left-1/3 w-2.5 h-2.5 bg-primary/20 dark:bg-accent/20 rounded-full animate-pulse delay-200"></div>
          <div class="absolute top-32 right-1/4 w-2 h-2 bg-primary/25 dark:bg-accent/25 rounded-full animate-pulse delay-300"></div>
        </div>

        <p class="uppercase text-sm tracking-[0.3em] text-primary-light dark:text-primary font-semibold">Get In Touch</p>
        <h1 class="font-display text-display-md md:text-display-lg font-bold gradient-text-animated mt-4">Let's Conjure Something Magical</h1>
        <p class="mt-6 text-body-lg text-gray-700 dark:text-text-dark-secondary max-w-3xl mx-auto leading-relaxed">
          Whether you're launching an MVP, scaling a platform, or exploring AI possibilitiesâ€”we're here to turn your vision into reality.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-8 mb-20">
        <!-- Main Contact Form - 2 columns -->
        <div class="lg:col-span-2 bg-surface-light dark:bg-surface-dark rounded-3xl shadow-card border border-border-light dark:border-border-dark p-8 md:p-10 scroll-reveal card-glow-hover">
          <div class="flex items-center gap-3 mb-8">
            <span class="material-symbols-outlined text-primary dark:text-accent text-3xl">mail</span>
            <h2 class="font-display text-heading-2 font-bold text-text-light-primary dark:text-text-dark-primary">Send Us A Message</h2>
          </div>

          <form class="space-y-6" id="contact-form">
            <div class="grid md:grid-cols-2 gap-6">
                <div class="form-group">
                  <label for="contact-name" class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                    <span class="flex items-center gap-2">
                      <span class="material-symbols-outlined text-base text-primary dark:text-accent">person</span>
                      Your Name
                    </span>
                  </label>
                  <input 
                    id="contact-name"
                    name="name"
                    class="w-full rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-surface-dark px-4 py-3 text-text-light-primary dark:text-text-dark-primary placeholder:text-text-light-tertiary dark:placeholder:text-text-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-accent transition-all" 
                    type="text" 
                    placeholder="Ada Lovelace"
                    required
                  />
                </div>

                <div class="form-group">
                  <label for="contact-email" class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                    <span class="flex items-center gap-2">
                      <span class="material-symbols-outlined text-base text-primary dark:text-accent">email</span>
                      Email Address
                    </span>
                  </label>
                  <input 
                    id="contact-email"
                    name="email"
                    class="w-full rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-surface-dark px-4 py-3 text-text-light-primary dark:text-text-dark-primary placeholder:text-text-light-tertiary dark:placeholder:text-text-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-accent transition-all" 
                    type="email" 
                    placeholder="you@company.com"
                    required
                  />
                </div>
            </div>

            <div class="form-group">
              <label for="contact-company" class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                <span class="flex items-center gap-2">
                  <span class="material-symbols-outlined text-base text-primary dark:text-accent">business</span>
                  Company / Project
                </span>
              </label>
              <input 
                id="contact-company"
                name="company"
                class="w-full rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-surface-dark px-4 py-3 text-text-light-primary dark:text-text-dark-primary placeholder:text-text-light-tertiary dark:placeholder:text-text-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-accent transition-all" 
                type="text" 
                placeholder="Your Company Name"
              />
            </div>

            <div class="form-group">
              <label for="contact-help" class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                <span class="flex items-center gap-2">
                  <span class="material-symbols-outlined text-base text-primary dark:text-accent">category</span>
                  What do you need help with?
                </span>
              </label>
              <select id="contact-help" name="help" class="w-full rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-surface-dark px-4 py-3 text-text-light-primary dark:text-text-dark-primary focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-accent transition-all">
                <option>Full-Stack Development</option>
                <option>AI Integration</option>
                <option>Product Design</option>
                <option>Cloud Architecture</option>
                <option>Consulting / Advisory</option>
                <option>Other</option>
              </select>
            </div>

            <div class="form-group">
              <label for="contact-message" class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                <span class="flex items-center gap-2">
                  <span class="material-symbols-outlined text-base text-primary dark:text-accent">description</span>
                  Tell us about your project
                </span>
              </label>
              <textarea 
                id="contact-message"
                name="message"
                class="w-full rounded-xl border border-border-light dark:border-border-dark bg-white dark:bg-surface-dark px-4 py-3 h-32 text-text-light-primary dark:text-text-dark-primary placeholder:text-text-light-tertiary dark:placeholder:text-text-dark-tertiary focus:outline-none focus:ring-2 focus:ring-primary dark:focus:ring-accent transition-all resize-none" 
                placeholder="Share your vision, timelines, goals, and any specific challenges you're facing..."
                required
              ></textarea>
            </div>

            <div class="form-group">
              <span class="block text-sm font-semibold text-text-light-primary dark:text-text-dark-primary mb-2">
                <span class="flex items-center gap-2">
                  <span class="material-symbols-outlined text-base text-primary dark:text-accent">schedule</span>
                  Preferred Timeline
                </span>
              </span>
              <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                {['ASAP', '1-2 weeks', '1 month', 'Flexible'].map((timeline, idx) => (
                  <label class="relative cursor-pointer" for={`timeline-${idx}`}>
                    <input id={`timeline-${idx}`} type="radio" name="timeline" value={timeline} class="peer sr-only" />
                    <div class="px-4 py-3 rounded-xl border-2 border-border-light dark:border-border-dark text-center text-sm font-medium transition-all peer-checked:border-primary peer-checked:bg-primary/5 dark:peer-checked:border-accent dark:peer-checked:bg-accent/5 hover:border-primary/50 dark:hover:border-accent/50">
                      {timeline}
                    </div>
                  </label>
                ))}
              </div>
            </div>

            <button 
              class="w-full inline-flex items-center justify-center gap-2 bg-primary text-white px-8 py-4 rounded-xl font-semibold hover:-translate-y-1 hover:shadow-lg transition-all duration-300 group" 
              type="submit"
            >
              <span class="material-symbols-outlined group-hover:rotate-12 transition-transform duration-300">send</span>
              Send Message
            </button>
          </form>
        </div>

        <!-- Sidebar - Contact Info & Quick Links -->
        <div class="space-y-6">
          <!-- Direct Contact -->
          <div class="scroll-reveal bg-surface-light dark:bg-surface-dark rounded-3xl p-6 shadow-card border border-border-light dark:border-border-dark card-glow-hover">
            <div class="flex items-center gap-3 mb-6">
              <span class="material-symbols-outlined text-primary dark:text-accent text-2xl">alternate_email</span>
              <h3 class="font-display text-heading-4 font-bold text-text-light-primary dark:text-text-dark-primary">Direct Contact</h3>
            </div>
            
            <div class="space-y-4">
              <a href="mailto:hello@thecodesorcerer.com" class="flex items-center gap-3 p-3 rounded-xl hover:bg-primary/5 dark:hover:bg-accent/5 transition-colors group">
                <span class="material-symbols-outlined text-primary dark:text-accent group-hover:scale-110 transition-transform">mail</span>
                <div>
                  <p class="text-xs text-text-light-tertiary dark:text-text-dark-tertiary">Email</p>
                  <p class="text-sm font-semibold text-text-light-primary dark:text-text-dark-primary">hello@thecodesorcerer.com</p>
                </div>
              </a>

              <a href="tel:+1234567890" class="flex items-center gap-3 p-3 rounded-xl hover:bg-primary/5 dark:hover:bg-accent/5 transition-colors group">
                <span class="material-symbols-outlined text-primary dark:text-accent group-hover:scale-110 transition-transform">call</span>
                <div>
                  <p class="text-xs text-text-light-tertiary dark:text-text-dark-tertiary">Phone</p>
                  <p class="text-sm font-semibold text-text-light-primary dark:text-text-dark-primary">+1 (234) 567-890</p>
                </div>
              </a>
            </div>
          </div>

          <!-- Response Time -->
          <div class="scroll-reveal bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/5 dark:to-accent/5 rounded-3xl p-6 border border-primary/20 dark:border-accent/20">
            <div class="flex items-center gap-3 mb-4">
              <span class="material-symbols-outlined text-primary dark:text-accent text-2xl">schedule</span>
              <h3 class="font-display text-heading-4 font-bold text-text-light-primary dark:text-text-dark-primary">Response Time</h3>
            </div>
            <p class="text-sm text-text-light-secondary dark:text-text-dark-secondary mb-4">
              We typically respond within 24 hours on business days.
            </p>
            <div class="flex items-center gap-2">
              <div class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></div>
              <span class="text-xs font-semibold text-green-600 dark:text-green-400">Currently Online</span>
            </div>
          </div>

          <!-- Social Links -->
          <div class="scroll-reveal bg-surface-light dark:bg-surface-dark rounded-3xl p-6 shadow-card border border-border-light dark:border-border-dark">
            <h3 class="font-display text-heading-4 font-bold text-text-light-primary dark:text-text-dark-primary mb-4">Follow The Magic</h3>
            
            <div class="grid grid-cols-2 gap-3">
              {[
                { name: 'Twitter', icon: 'X', href: 'https://twitter.com/thecodesorcerer' },
                { name: 'LinkedIn', icon: 'work', href: 'https://linkedin.com/company/thecodesorcerer' },
                { name: 'GitHub', icon: 'code', href: 'https://github.com/thecodesorcerer' },
                { name: 'Discord', icon: 'forum', href: 'https://discord.gg/thecodesorcerer' }
              ].map((social) => (
                <a 
                  href={social.href}
                  class="flex items-center justify-center gap-2 p-3 rounded-xl border border-border-light dark:border-border-dark hover:border-primary dark:hover:border-accent hover:bg-primary/5 dark:hover:bg-accent/5 transition-all group"
                >
                  <span class="material-symbols-outlined text-lg text-primary dark:text-accent group-hover:scale-110 transition-transform">{social.icon}</span>
                  <span class="text-xs font-semibold text-text-light-primary dark:text-text-dark-primary">{social.name}</span>
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Stats Section -->
      <section class="scroll-reveal mb-20">
        <div class="bg-surface-light dark:bg-surface-dark rounded-3xl p-10 border border-border-light dark:border-border-dark">
          <p class="text-center text-sm uppercase tracking-[0.2em] text-text-light-tertiary dark:text-text-dark-tertiary mb-8">Why Work With Us</p>
          
          <div class="grid md:grid-cols-4 gap-8 text-center">
            {[
              { number: '24', suffix: 'h', label: 'Response Time', icon: 'schedule' },
              { number: '50', suffix: '+', label: 'Projects Delivered', icon: 'check_circle' },
              { number: '98', suffix: '%', label: 'Client Satisfaction', icon: 'sentiment_satisfied' },
              { number: '5', suffix: 'yr', label: 'Average Experience', icon: 'workspace_premium' }
            ].map((stat) => (
              <div class="scroll-reveal group">
                <span class="material-symbols-outlined text-primary dark:text-accent text-3xl mb-2 block group-hover:scale-110 transition-transform duration-300">{stat.icon}</span>
                <p class="font-display text-3xl font-bold text-text-light-primary dark:text-text-dark-primary">
                  <span class="count-up" data-target={stat.number} data-suffix={stat.suffix}>0</span>
                </p>
                <p class="text-sm text-text-light-secondary dark:text-text-dark-tertiary mt-1">{stat.label}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- Office Hours / Availability -->
      <section class="scroll-reveal">
        <div class="relative bg-gradient-to-br from-primary/10 to-accent/10 dark:from-primary/5 dark:to-accent/5 rounded-3xl p-12 border border-primary/20 dark:border-accent/20 overflow-hidden text-center">
          <!-- Decorative blur elements -->
          <div class="absolute top-0 right-0 w-64 h-64 bg-primary/20 dark:bg-accent/10 rounded-full blur-3xl -z-10"></div>
          <div class="absolute bottom-0 left-0 w-64 h-64 bg-accent/20 dark:bg-primary/10 rounded-full blur-3xl -z-10"></div>

          <span class="material-symbols-outlined text-primary dark:text-accent text-5xl mb-4 inline-block">event_available</span>
          <h2 class="font-display text-heading-1 font-bold text-text-light-primary dark:text-text-dark-primary mb-4">
            Ready to Start?
          </h2>
          <p class="text-body-lg text-text-light-secondary dark:text-text-dark-secondary max-w-2xl mx-auto mb-8">
            Book a free 30-minute discovery call to discuss your project. No pressure, just good conversation.
          </p>
          
          <div class="flex flex-wrap gap-4 justify-center">
            <a class="inline-flex items-center gap-2 bg-primary text-white px-8 py-4 rounded-xl font-semibold hover:-translate-y-1 hover:shadow-lg transition-all duration-300" href="https://calendly.com/thecodesorcerer/discovery-call" target="_blank" rel="noopener">
              <span class="material-symbols-outlined">calendar_month</span>
              Schedule A Call
            </a>
            <a class="inline-flex items-center gap-2 bg-surface-light dark:bg-surface-dark text-text-light-primary dark:text-text-dark-primary px-8 py-4 rounded-xl font-semibold border border-border-light dark:border-border-dark hover:-translate-y-1 hover:shadow-lg transition-all duration-300" href="/pricing">
              <span class="material-symbols-outlined">payments</span>
              View Pricing
            </a>
          </div>

          <div class="mt-8 pt-8 border-t border-border-light dark:border-border-dark">
            <p class="text-sm text-text-light-tertiary dark:text-text-dark-tertiary">
              <span class="count-up font-semibold text-primary dark:text-accent" data-target="150" data-suffix="+">0</span> calls scheduled this month
            </p>
          </div>
        </div>
      </section>
    </div>
  </main>

  <script>
    import { initAnimations } from '../scripts/animations';
    
    // Count-up animation
    function animateCountUp(element: HTMLElement) {
      const target = parseFloat(element.dataset.target || '0');
      const suffix = element.dataset.suffix || '';
      const duration = 2000;
      const steps = 60;
      const increment = target / steps;
      const stepDuration = duration / steps;
      
      let current = 0;
      const timer = setInterval(() => {
        current += increment;
        if (current >= target) {
          current = target;
          clearInterval(timer);
        }
        
        element.textContent = Math.floor(current).toString() + suffix;
      }, stepDuration);
    }

    // Form validation & animation
    function initFormAnimations() {
      const form = document.getElementById('contact-form') as HTMLFormElement;
      const formGroups = document.querySelectorAll('.form-group');
      
      // Add focus animations to form inputs
      formGroups.forEach((group) => {
        const input = group.querySelector('input, textarea, select');
        if (input) {
          input.addEventListener('focus', () => {
            group.classList.add('scale-[1.02]');
          });
          input.addEventListener('blur', () => {
            group.classList.remove('scale-[1.02]');
          });
        }
      });

      // Form submission
      form?.addEventListener('submit', (e) => {
        e.preventDefault();
        
        const button = form.querySelector('button[type="submit"]');
        if (button) {
          const originalText = button.innerHTML;
          button.innerHTML = '<span class="material-symbols-outlined animate-spin">progress_activity</span> Sending...';
          
          // Simulate sending
          setTimeout(() => {
            button.innerHTML = '<span class="material-symbols-outlined">check_circle</span> Message Sent!';
            button.classList.add('bg-green-500');
            
            setTimeout(() => {
              form.reset();
              button.innerHTML = originalText;
              button.classList.remove('bg-green-500');
            }, 2000);
          }, 1500);
        }
      });
    }

    // Observe stats for animation trigger
    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const countUpElements = entry.target.querySelectorAll('.count-up');
          countUpElements.forEach((el) => {
            if (!el.classList.contains('animated')) {
              el.classList.add('animated');
              animateCountUp(el as HTMLElement);
            }
          });
        }
      });
    }, { threshold: 0.5 });
    
    document.addEventListener('DOMContentLoaded', () => {
      initAnimations();
      initFormAnimations();
      
      // Observe sections with count-up stats
      const statSections = document.querySelectorAll('section.scroll-reveal');
      statSections.forEach(section => {
        if (section.querySelector('.count-up')) {
          statsObserver.observe(section);
        }
      });
    });
  </script>
</Layout>
