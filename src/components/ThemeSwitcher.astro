---
// ThemeSwitcher component for toggling between light and dark mode
---

<button 
  type="button"
  data-theme-toggle
  class="p-2 rounded-lg bg-gray-200 dark:bg-gray-800 text-gray-800 dark:text-gray-200 hover:bg-gray-300 dark:hover:bg-gray-700 transition-colors inline-flex items-center justify-center w-10 h-10"
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <span class="material-symbols-outlined text-xl" data-sun-icon>light_mode</span>
  <span class="material-symbols-outlined text-xl hidden" data-moon-icon>dark_mode</span>
</button>

<script is:inline>
  (function () {
    const storageKey = 'theme';

    const getThemePreference = () => {
      const saved = localStorage.getItem(storageKey);
      if (saved === 'light' || saved === 'dark') return saved;
      return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    };

    const setRootTheme = (theme) => {
      document.documentElement.classList.toggle('dark', theme === 'dark');
    };

    const syncIcons = (theme) => {
      const showDark = theme === 'dark';
      document.querySelectorAll('[data-sun-icon]').forEach((icon) => {
        icon.classList.toggle('hidden', showDark);
      });
      document.querySelectorAll('[data-moon-icon]').forEach((icon) => {
        icon.classList.toggle('hidden', !showDark);
      });
    };

    const applyTheme = (theme) => {
      setRootTheme(theme);
      syncIcons(theme);
    };

    const bindToggleButtons = () => {
      const root = document.documentElement;
      document.querySelectorAll('[data-theme-toggle]').forEach((btn) => {
        btn.addEventListener('click', () => {
          const newTheme = root.classList.contains('dark') ? 'light' : 'dark';
          localStorage.setItem(storageKey, newTheme);
          applyTheme(newTheme);
        });
      });
    };

    const onReady = (cb) => {
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', cb, { once: true });
      } else {
        cb();
      }
    };

    const initialTheme = getThemePreference();
    setRootTheme(initialTheme);

    if (window.__themeSwitcherInitialized) {
      onReady(() => syncIcons(getThemePreference()));
      return;
    }

    window.__themeSwitcherInitialized = true;

    onReady(() => {
      syncIcons(initialTheme);
      bindToggleButtons();
    });
  })();
</script>
